<h1>Hike Details</h1>
<h3>Location: <%= @hike.location %></h3>
<h3>Distance: <%= @hike.distance %> miles</h3>
<h3>Terrain Difficulty: <%= @hike.terrain %></h3>
<br>
<% if @hike.user_id == current_user.id %>
<a href="/hikes/<%=@hike.id%>/edit">Edit Hike Info</a><br>
<br>
<form method="POST" action="/hikes/<%=@hike.id%>">
<input type="hidden" name="_method" value="DELETE"/>
<input type="submit" id="delete" value="Delete Hike">
</form><br>
<a href="/hikes">Return to List of Hikes</a>
<% end %>
