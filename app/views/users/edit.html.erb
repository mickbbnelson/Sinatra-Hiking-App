<h2> Editing <%= @user.name %></h2>
<form method="POST" action="/users/<%=@user.id%>"><br>
<input type="hidden" name="_method" value="PATCH"/>
<label> Name: </label>
<input id="name" type="text" name="name" value="<%=@user.name%>"><br>
<br>
<label> Username: </label>
<input id="username" type="text" name="username" value="<%=@user.username%>"><br>
<br>
<label> Email: </label>
<input id="email_address" type="text" name="email_address" value="<%=@user.email_address%>"><br>
<br>
<label> Password: </label>
<input id="password" type="password" name="password" value="<%=@user.password%>"><br>
<br>
<input type="submit" id="submit" value="Update">
</form>